<Window x:Class="BindingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf" 
        Title="BindingDemo" Height="480" Width="640">
    <Window.Resources>
        <XmlDataProvider x:Key="WorldPopulationData" Source="WorldPopulation.xml"  />
    </Window.Resources>
    <Grid>
        <oxy:PlotControl x:Name="plot1" Title="Test">
            <oxy:PlotControl.Series>
                <oxy:LineSeries Title="My data" DataFieldX="Time" DataFieldY="Value" ItemsSource="{Binding Measurements}"/>
            </oxy:PlotControl.Series>
        </oxy:PlotControl>
    </Grid>
</Window>
