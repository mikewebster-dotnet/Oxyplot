<Window x:Class="BindingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf" 
        Title="BindingDemo" Height="480" Width="640">
    <Window.Resources>
        <XmlDataProvider x:Key="WorldPopulationData" Source="WorldPopulation.xml"  />
    </Window.Resources>
    <Grid>
        <oxy:PlotControl x:Name="plot1" Title="Test">
            <oxy:PlotControl.Series>
                <oxy:LineSeries Title="Simulated Value" DataFieldX="Time" DataFieldY="Value" Thickness="2" Color="Peru" ItemsSource="{Binding Measurements}"/>
                <oxy:LineSeries Title="Maximum" DataFieldX="Time" DataFieldY="Maximum" LineStyle="Dash" Thickness="2" ItemsSource="{Binding Measurements}"/>
                <oxy:LineSeries Title="Minimum" DataFieldX="Time" DataFieldY="Minimum" LineStyle="Dot" Thickness="2" ItemsSource="{Binding Measurements}"/>
            </oxy:PlotControl.Series>
        </oxy:PlotControl>
    </Grid>
</Window>
